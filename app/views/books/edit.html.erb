<body>
    <p id="notice">
     <%= notice %>
    </p>
    <h1>Editing Book</h1>
    
    <% if @book.errors.any? %>
          <%= @book.errors.count %>件のerrorが発生しました
          <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
    
    <%= form_with model: @book do |f| %>
    <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <label for="book_body">Body</label>
        <%= f.text_area :body %>
    </div>
    <div>
        <%= f.submit " Update Book " %>
    </div>
    <% end %>
    
    <div class=edit-show-link>
    <%= link_to "Show", book_path(@book.id) %>
    |
    <a class="back" href="/books">Back</a>
    </div>
</body>
